{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "../pkg-ts",
    "rootDir": ".",
    "lib": ["ES2020", "DOM"],
    "useDefineForClassFields": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "../pkg", "../pkg-ts"]
}
